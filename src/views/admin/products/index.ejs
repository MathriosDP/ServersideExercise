<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%- include('../../common/imports'); -%>
  </head>
  <body>
    <%- include('../../common/navbar'); -%>
    <div class="container">
        <div class="row">
            <h1>Administração de Produtos</h1>
        </div>
        <div class="row mb-2">
            <a href="/admin/products/create" class="btn btn-success">Novo Produto</a>
        </div>
        <div class="row">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">id</th>
                        <th scope="col">name</th>
                        <th scope="col">description</th>
                        <th scope="col">price</th>
                        <th scope="col">image</th>

                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product) => { %>
                        <tr>
                        <th scope="row">1</th>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td><%= product.description %></td>
                        <td><%= product.price %></td>
                        <td><%= product.image %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
  </body>
</html>
